.mm {
        width: 100px;
        margin: 0 auto;
    }
     
    .cc {
        position: relative;
        width: 100px;
        height: 150px;
        border: 5px solid #fff;
        margin: auto;
        margin-top: 50px;
    }
     
    .top {
        position: absolute;
        top: -20px;
        left: 50%;
        width: 26px;
        height: 10px;
        margin-left: -15px;
        border: 5px solid #fff;
    }
     
    .filler {
        position: absolute;
        bottom: 0px;
        width: 100%;
        height: 50%;
    }
    .animation{
        animation: first 5s linear infinite;
    }
    @keyframes first{
        0% {
            height:0px;
            /*background:#ff5722;
            background:rgba(255,87,34,1);*/
            background:linear-gradient(to right,
                rgba(100,250,50,1) 0%,
                rgba(100,250,50,1) 100%);
        }
         
        30% {
            /*background:#ff9800;
            background:rgba(255,152,0,1);*/
            background:linear-gradient(to right,
                rgba(100,250,50,1) 0%,
                rgba(100,250,50,1) 100%);
        }
         
        100% {
            height:100%;
            /*background:#64fa32;
