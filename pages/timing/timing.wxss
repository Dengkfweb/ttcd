.cc {
    position: relative;
    width: 100px;
    height: 150px;
    border: 5px solid #fff;
    margin: auto;
    margin-top: 50px;
}
.top {
    position: absolute;
    top: -20px;
    left: 50%;
    width: 26px;
    height: 10px;
    margin-left: -15px;
    border: 5px solid #fff;
}
  
.filler {
    position: absolute;
    bottom: 0px;
    width: 100%;
    height: 50%;
}
.animation{
    animation: first 5s linear infinite;
}
